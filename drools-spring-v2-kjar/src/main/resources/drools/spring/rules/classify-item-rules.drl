package drools.spring.rules;

import drools.spring.example.facts.Item;
import drools.spring.example.facts.Item.Category;


rule "Classify Item - Low Range"
    when
        $i: Item( cost <= 200, category == Category.NA )
    then
        $i.setCategory(Category.SIMA_KAT);
        $i.setName("novije ime");
        update($i);
end